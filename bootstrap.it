rule("cxx", "C++") {
    accepts: ["*.cpp", "*.cxx", "*.c++"],
    output: {
        pattern: (sys.type=="unix" ? "*.o":"*.obj"),
        expected: (sys.type=="unix" ? "%t-%e.o":"%t-%e.obj")
    },
    prepare: function() {
        print "Checking for a C++ compiler...";
    },
    build: function(input, output, targetName, target) {
        print "Building: " .. input;
        return true;
    }
}

